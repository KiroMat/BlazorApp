@namespace WebAssemblyApp.Components

<EditForm Model="_model" OnValidSubmit="RegisterUserAsync">
    <FluentValidationValidator />
    

    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Create a new account</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Label="Login" HelperText="Required" Placeholder="xxxxxx" @bind-Value="@_model.Login" />
            <MudTextField Label="Email" HelperText="Required" Placeholder="xxxxx@xxx.xx" @bind-Value="@_model.Email" />
            <MudTextField Label="Password" HelperText="Required" InputType="InputType.Password" @bind-Value="@_model.Password" />

            <ValidationSummary />

            @if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="my-2" Variant="Variant.Filled">@_errorMessage</MudAlert>
            }
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="_isBusy">Register</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="RedirectToLogin" Disabled="_isBusy" Class="ml-2">Login</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>


